{
    "name": "netgen/block-manager",
    "description": "Netgen Block Manager",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "http://www.netgenlabs.com"
        }
    ],
    "require": {
        "php": "^5.5|^7.0",
        "netgen/block-manager-ui-bundle": "^1.0@dev",
        "netgen/content-browser-bundle": "^1.0@dev",
        "symfony/symfony": "^2.8|^3.0",
        "sensio/framework-extra-bundle": "^3.0",
        "doctrine/dbal": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-migrations-bundle": "^1.0",
        "ezyang/htmlpurifier": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4.6",
        "symfony/phpunit-bridge": "^2.8|^3.0",
        "matthiasnoback/symfony-dependency-injection-test": "^1.0",
        "matthiasnoback/symfony-config-test": "^2.0",
        "ezsystems/ezpublish-kernel": "^6.0",
        "lakion/api-test-case": "*"
    },
    "repositories": [
        { "type": "composer", "url": "https://packagist.netgen.biz" }
    ],
    "autoload": {
        "psr-4": {
            "Netgen\\BlockManager\\": "lib/",
            "Netgen\\BlockManager\\Ez\\": "ezlib/",
            "Netgen\\Bundle\\BlockManagerBundle\\": "bundles/BlockManagerBundle/",
            "Netgen\\Bundle\\BlockManagerAdminBundle\\": "bundles/BlockManagerAdminBundle/",
            "Netgen\\Bundle\\EzPublishBlockManagerBundle\\": "bundles/EzPublishBlockManagerBundle/"
        },
        "exclude-from-classmap": [
            "**/Tests/"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
