{
    "name": "netgen/block-manager",
    "description": "Netgen Block Manager",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "http://www.netgenlabs.com"
        }
    ],
    "require": {
        "php": "^5.6|^7.1",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "netgen/block-manager-ui": "~0.9.0@dev",
        "netgen/content-browser": "~0.9.0@dev",
        "symfony/symfony": "^2.8|^3.3",
        "twig/twig": "^1.30|^2.0",
        "twig/extensions": "^1.5",
        "sensio/framework-extra-bundle": "^3.0",
        "doctrine/dbal": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/migrations": "^1.4",
        "doctrine/doctrine-migrations-bundle": "^1.1",
        "ezyang/htmlpurifier": "^4.7",
        "knplabs/knp-menu-bundle": "^2.1.2",
        "michelf/php-markdown": "^1.6",
        "friendsofsymfony/http-cache-bundle": "^1.3.10|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7|^6.3",
        "symfony/phpunit-bridge": "^3.3",
        "matthiasnoback/symfony-dependency-injection-test": "^1.0|^2.0",
        "matthiasnoback/symfony-config-test": "^2.0|^3.0",
        "franzl/studio": "*"
    },
    "config": {
        "process-timeout": 600
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always",
        "coverage": "@php -dzend_extension=xdebug.so vendor/bin/phpunit --coverage-html=coverage --colors=always"
    },
    "repositories": [
        { "type": "composer", "url": "https://packagist.netgen.biz" }
    ],
    "autoload": {
        "psr-4": {
            "Netgen\\BlockManager\\": "lib/",

            "Netgen\\BlockManager\\Migrations\\": "migrations/",

            "Netgen\\Bundle\\BlockManagerBundle\\": "bundles/BlockManagerBundle/",
            "Netgen\\Bundle\\BlockManagerAdminBundle\\": "bundles/BlockManagerAdminBundle/",
            "Netgen\\Bundle\\BlockManagerDebugBundle\\": "bundles/BlockManagerDebugBundle/",
            "Netgen\\Bundle\\BlockManagerFixturesBundle\\": "bundles/BlockManagerFixturesBundle/",

            "Netgen\\BlockManager\\Tests\\": "tests/lib/",
            "Netgen\\Bundle\\BlockManagerBundle\\Tests\\": "tests/bundles/BlockManagerBundle/",
            "Netgen\\Bundle\\BlockManagerAdminBundle\\Tests\\": "tests/bundles/BlockManagerAdminBundle/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "files": [
            "tests/bootstrap.php",
            "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.9.x-dev"
        }
    }
}
