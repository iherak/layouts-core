{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set layout = collector.data.layout %}
    {% set rule = collector.data.rule %}

    {% set status = 'yellow' %}
    {% if layout %}
        {% set status = 'green' %}
    {% endif %}

    {% set icon %}
        <img src="{{ asset('bundles/netgenblockmanageradmin/images/layouts-logo-silhouette.svg') }}" />

        <span class="sf-toolbar-value">
            {% if layout %}
                {{ layout.name }}
            {% else %}
                No layout resolved
            {% endif %}
        </span>
    {% endset %}

    {% if layout %}
        {% set text %}
            {% import 'NetgenBlockManagerAdminBundle:admin:macros.html.twig' as macros %}

            <div class="sf-toolbar-info-piece">
                <b>Resolved layout</b>

                <span>
                    <a href="{{ macros.layout_path(layout.id) }}" target="_blank">
                        {{ layout.name }}
                    </a>
                </span>
            </div>

            <div class="sf-toolbar-info-piece">
                <b>Layout type</b>

                <span>{{ layout.type }}</span>
            </div>

            <div class="sf-toolbar-info-piece">
                <b>Rule ID</b>

                <span>{{ rule.id }}</span>
            </div>

            <div class="sf-toolbar-info-piece">
                <b>Netgen Layouts version</b>

                <span>{{ constant('Netgen\\BlockManager\\Version::VERSION') }}</span>
            </div>
        {% endset %}
    {% endif %}

    {{ include('WebProfilerBundle:Profiler:toolbar_item.html.twig') }}
{% endblock %}

{% block head %}
    {{ parent() }}

    <style type="text/css">
        .container {
            max-width:100%;
        }

        .nl-container {
            max-width:1060px;
        }
    </style>
{% endblock %}

{% block menu %}
    <span class="label">
        <span class="icon">
            <img src="{{ asset('bundles/netgenblockmanageradmin/images/layouts-logo-silhouette.svg') }}" />
        </span>

        <strong>Netgen Layouts</strong>
    </span>
{% endblock %}

{% block panel %}
    {% set layout = collector.data.layout %}
    {% set rule = collector.data.rule %}
    {% set blocks = collector.data.blocks %}

    <div class="sf-tabs">
        {% import 'NetgenBlockManagerAdminBundle:admin:macros.html.twig' as macros %}

        <div class="tab">
            <h3 class="tab-title">Rendered layout</h3>

            <div class="tab-content nl-container">
                {% if layout %}
                    <div class="metrics">
                        <div class="metric">
                            <span class="value">{{ constant('Netgen\\BlockManager\\Version::VERSION') }}</span>
                            <span class="label">Netgen Layouts version</span>
                        </div>

                        <div class="metric">
                            <span class="value">
                                <a href="{{ macros.layout_path(layout.id) }}" target="_blank">
                                    {{ layout.name }}
                                </a>
                            </span>
                            <span class="label">Layout name</span>
                        </div>

                        <div class="metric">
                            <span class="value">{{ layout.type }}</span>
                            <span class="label">Layout type</span>
                        </div>

                        <div class="metric">
                            <span class="value">{{ rule.id }}</span>
                            <span class="label">Rule ID</span>
                        </div>
                    </div>

                    <div class="metrics">
                        <div class="metric">
                            <span class="value">{{ layout.template }}</span>
                            <span class="label">Template</span>
                        </div>
                        <div class="metric">
                            <span class="value">{{ layout.context }}</span>
                            <span class="label">Context</span>
                        </div>
                    </div>

                    <h2>Rule targets</h2>

                    <table>
                        <thead>
                            <tr>
                                <th scope="col" class="key">Target type</th>
                                <th scope="col">Target value</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for target in rule.targets %}
                            <tr>
                                <th>{{ target.type }}</th>
                                <td>{{ profiler_dump(target.value) }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <h2>Rule conditions</h2>

                    {% if rule.conditions is defined and rule.conditions|length > 0 %}
                        <table>
                            <thead>
                                <tr>
                                    <th scope="col" class="key">Condition type</th>
                                    <th scope="col">Condition value</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for condition in rule.conditions %}
                                <tr>
                                    <th>{{ condition.type }}</th>
                                    <td>{{ profiler_dump(condition.value) }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p class="empty">
                            Rule does not have any conditions.
                        </p>
                    {% endif %}
                {% else %}
                    <div class="metrics">
                        <div class="metric">
                            <span class="value">{{ constant('Netgen\\BlockManager\\Version::VERSION') }}</span>
                            <span class="label">Netgen Layouts version</span>
                        </div>
                    </div>

                    <div class="empty">
                        <p>No layout was resolved for this request.</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="tab">
            <h3 class="tab-title">Rendered blocks</h3>

            <div class="tab-content">
                {% if blocks|length > 0 %}
                    <div class="metrics">
                        <div class="metric">
                            <span class="value">{{ blocks|length }}</span>
                            <span class="label">Blocks rendered</span>
                        </div>
                    </div>

                    <table>
                        <thead>
                            <tr>
                                <th scope="col">Block ID</th>
                                <th scope="col">Block info</th>
                                <th scope="col">Template</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for block in blocks %}
                            <tr>
                                <th>{{ block.id }}</th>
                                <td class="font-normal">
                                    <div class="metadata">
                                        <strong>Block definition</strong>: {{ block.definition }}
                                    </div>
                                    <div class="metadata">
                                        <strong>View type</strong>: {{ block.view_type}}
                                    </div>
                                </td>
                                <td>{{ block.template }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="empty">
                        <p>No blocks were rendered during this request.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
