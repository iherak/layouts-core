{% trans_default_domain 'ngbm_api' %}

{% macro collection(collections, identifier, item_view_type, view_context) %}
    {% if collections[identifier] is defined %}
        {% if collections[identifier].results|length == 0 %}
            {% include 'NetgenBlockManagerBundle:api/block/parts:notice.html.twig' with {
                notice: 'block.empty_collection.notice'|trans
            } %}
        {% else %}
            <div class="list-row">
                {% for result in collections[identifier].results %}
                    <div class="list-item">
                        {{ ngbm_render_item(result.item, item_view_type, [], view_context) }}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endif %}
{% endmacro %}
