{% trans_default_domain 'ngbm_app' %}

{% set view_type_name = block.viewType %}

{% if block_definition.config.hasViewType(view_type_name) %}
    {% set view_type_name = block_definition.config.viewType(view_type_name).name %}
{% endif %}

{% block controls %}
    <div class="block-header">
        <div class="handle" title="{{ 'layout.block.move'|trans }}"><i class="fa fa-ellipsis-h"></i><i class="fa fa-ellipsis-h"></i></div>
        <div class="name">{{ block.name }}</div>
        <div class="block-action js-destroy" title="{{ 'layout.block.delete'|trans }}"><i class="fa fa-times"></i></div>
        <div class="block-action js-revert" title="{{ 'layout.block.revert'|trans }}"><i class="fa fa-undo"></i></div>
        <div class="template_name">{{ view_type_name }}</div>
    </div>
{% endblock %}

{% block inline_data %}{% endblock %}

{% block content %}{% endblock %}
