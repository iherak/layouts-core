{% extends 'NetgenBlockManagerBundle:api/block:block.html.twig' %}

{% import 'NetgenBlockManagerBundle:api/parts:macros.html.twig' as macros %}

{% trans_default_domain 'ngbm_app' %}

{% block content %}
    {% if collections.default is defined %}
        {% if collections.default is not empty %}
            <div class="grid-row">
                {% for result in collections.default %}
                    <div class="grid-item cols-{{ block.parameter('number_of_columns').value|default(3) }}">
                        {{ ngbm_render_item(result.item, block.itemViewType) }}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {{ macros.notice('block.notice.empty_collection'|trans) }}
        {% endif %}
    {% endif %}
{% endblock %}
