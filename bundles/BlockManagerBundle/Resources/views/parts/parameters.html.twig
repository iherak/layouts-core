{% macro link(link) %}
{% spaceless %}
    {% if link is not empty %}
        {% if link.link_type == 'url' %}
            {{ link.link }}
        {% elseif link.link_type == 'email' %}
            {{ 'mailto:' ~ link.link }}
        {% elseif link.link_type == 'phone' %}
            {{ 'tel:' ~ link.link }}
        {% elseif link.link_type == 'internal' %}
            {{ ngbm_item_path(link.link) ~ link.link_suffix }}
        {% endif %}
    {% endif %}
{% endspaceless %}
{% endmacro %}
