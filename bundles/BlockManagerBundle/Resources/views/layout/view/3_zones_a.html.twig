{% extends ngbm.pageLayout %}

{% block layout %}
<div class="split">
    <div class="l">
        <div data-zone="top_left">
            {{ ngbm_render_zone(layout.zones.top_left) }}
        </div>
    </div>

    <div class="r">
        <div data-zone="top_right">
            {{ ngbm_render_zone(layout.zones.top_right) }}
        </div>
    </div>

    <div id="main" class="clearfix">
        {{ block('content') }}
    </div>

    <div class="r">
        <div data-zone="bottom">
            {{ ngbm_render_zone(layout.zones.bottom) }}
        </div>
    </div>
</div>
{% endblock %}
