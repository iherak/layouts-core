<p data-inline>
    <span contenteditable="true" data-attr="content" data-inline-child>
        {{ block.parameters.content|default('Paragraph') }}
    </span>
</p>

{% if form is defined and form is not empty %}
    {% set form_action = path('netgen_block_manager_api_v1_edit_block_inline', {'block_id': block.id}) %}

    {{ form_start(form, {'action': form_action, 'method': 'PATCH', 'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
    {{ form_end(form) }}
{% endif %}
