{% extends 'NetgenBlockManagerBundle:block:block.html.twig' %}

{% set tag = block.parameter('tag').value|default('h1') %}
{% set title = block.parameter('title').value %}
{% set link = block.parameter('link') %}

{% block content %}
    <{{ tag }} class="title">
        {% if not link.empty %}
            {{ ngbm_render_parameter(link, {content: title}) }}
        {% else %}
            {{ title }}
        {% endif %}
    </{{ tag }}>
{% endblock %}
