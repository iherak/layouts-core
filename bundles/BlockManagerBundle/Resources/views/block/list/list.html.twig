{% extends '@NetgenBlockManager/block/block.html.twig' %}

{% import '@NetgenBlockManager/parts/macros.html.twig' as macros %}

{% set ajax_collection_enabled = false %}
{% set collection_identifier = 'default' %}

{% set collection_html %}
    {{ macros.collection(collections, collection_identifier, block.itemViewType, view_context) }}
{% endset %}

{% block content %}
    {% if collections[collection_identifier] is defined and collections[collection_identifier] is not empty %}
        {% if ajax_collection_enabled %}
            {% embed '@NetgenBlockManager/collection/ajax_collection.html.twig' with {pager: pagers[collection_identifier]} %}
                {% block collection_page %}
                    {{ collection_html }}
                {% endblock %}
            {% endembed %}
        {% else %}
            {{ collection_html }}
        {% endif %}
    {% endif %}
{% endblock %}
