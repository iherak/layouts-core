{% set css_class = block.parameter('css_class') %}
{% set css_id = block.parameter('css_id') %}
{% set set_container = block.parameter('set_container') %}

<div
    {% if css_class is not empty %} class="{{ css_class }}" {% endif %}
    {% if css_id is not empty %} id="{{ css_id }}" {% endif %}
>
    {% if set_container %}<div class="container">{% endif %}
    {% block content %}{% endblock %}
    {% if set_container %}</div>{% endif %}
</div>
