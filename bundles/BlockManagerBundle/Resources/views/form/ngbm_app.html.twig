{%- use 'form_div_layout.html.twig' with form_row as base_form_row -%}

{%- block form_row -%}
    {%- if 'checkbox' in block_prefixes or 'radio' in block_prefixes -%}
        <div>
            {{- form_errors(form) -}}
            {{- form_widget(form) -}}
            {{- form_label(form) -}}
        </div>
    {%- else -%}
        {{- block('base_form_row') -}}
    {%- endif -%}
{%- endblock form_row -%}

{%- block ngbm_compound_boolean_widget -%}
    <div data-compound-checkbox="true" {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{- form_errors(form) -}}
        {%- endif -%}

        <div class="checkbox">
            {{- form_row(form.children[form.vars.checkbox_name]) -}}
        </div>

        <div class="children">
            {%- for name, child in form.children -%}
                {%- if name != form.vars.checkbox_name -%}
                    {{- form_row(child) -}}
                {%- endif -%}
            {%- endfor -%}
        </div>

        {{- form_rest(form) -}}
    </div>
{%- endblock ngbm_compound_boolean_widget -%}

{%- block ngbm_content_browser_widget -%}
    <div data-browser-config-name="{{ form.vars.config_name }}" class="js-input-browse">
        <div><span class="js-name">Parent location name</span> <a class="js-trigger" href="#">change</a></div>
        <input type="hidden" {{ block('widget_attributes') }} {% if value is not empty %} value="{{ value }}" {% endif %} />
    </div>
{%- endblock -%}
