{% trans_default_domain 'ngbm_admin' %}

<!DOCTYPE html>
<html lang="{{ app.request.locale|replace({'_': '-'}) }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="ngbm-admin-csrf-token" content="{{ csrf_token( ngbm.config.parameter('admin.csrf_token_id') ) }}">

    {% block title %}
        <title>{{ 'pagelayout.title'|trans }}</title>
    {% endblock %}

    {% block stylesheets %}
        {% include 'NetgenBlockManagerAdminBundle:admin:stylesheets.html.twig' %}
    {% endblock %}

    {% block javascripts %}
        {% include 'NetgenBlockManagerAdminBundle:admin:javascripts.html.twig' %}
    {% endblock %}
</head>
<body>
    <div class="container">
        {% block content %}{% endblock %}
    </div>
</body>
</html>
