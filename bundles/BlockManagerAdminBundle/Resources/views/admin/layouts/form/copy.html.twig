{% extends '@NetgenBlockManagerAdmin/form/modal.html.twig' %}

{% trans_default_domain 'ngbm_forms' %}

{% block header %}
    {{ 'layout.copy.title'|trans }}
{% endblock %}

{% block children %}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
{% endblock %}

{% block buttons %}
    <a class="nl-btn js-cancel-copy">{{ 'layout.copy.button.cancel'|trans }}</a>
    <button type="submit" class="nl-btn nl-btn-primary">{{ 'layout.copy.button.copy'|trans }}</button>
{% endblock %}
