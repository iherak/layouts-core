{% extends '@NetgenBlockManagerAdmin/admin/modal.html.twig' %}

{% trans_default_domain 'ngbm_admin' %}

{% block header %}
    {{ 'layouts.cache.layout.title'|trans }}: <strong>{{ layout.name }}</strong>
{% endblock %}

{% block body %}
    {% if error %}
        <ul class="errors">
            <li>{{ 'layouts.cache.layout.error'|trans }}</li>
        </ul>
    {% endif %}

    <p>{{ 'layouts.cache.layout.message'|trans }}</p>
{% endblock %}

{% block buttons %}
    <button type="submit" class="nl-btn nl-btn-primary action-apply">{{ 'layouts.cache.layout.button.clear'|trans }}</button>
{% endblock %}
