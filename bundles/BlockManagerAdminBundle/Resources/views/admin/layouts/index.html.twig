{% extends ngbm_admin.pageLayoutTemplate %}

{% trans_default_domain 'ngbm_admin' %}

{% block title %}
    {{ 'layouts.title'|trans }} - {{ 'pagelayout.title'|trans }}
{% endblock %}

{% block content %}
    <div id="layouts">
        <div class="l-layouts">
            {% for layout in layouts %}
                <div class="nl-panel nl-layout">
                    {{ ngbm_render_layout(layout, [], 'admin') }}
                </div>
            {% else %}
                <p>{{ 'layouts.no_layouts'|trans }}</p>
            {% endfor %}
        </div>

        {% if is_granted('ngbm:editor') %}
            <a href="{{ path('ngbm_app') }}" id="add-new-button" class="nl-btn nl-btn-primary js-open-bm">
                <i class="material-icons">add</i> {{ 'layouts.create_layout'|trans }}
            </a>
        {% endif %}
    </div>
{% endblock %}
