<div class="nl-modal">
    <a href="#" class="close-modal"></a>

    <div class="nl-modal-head">
        Clear linked layouts caches for shared layout: {{ layout.name }}
    </div>

    <div class="nl-modal-body">
        {% for related_layout in related_layouts %}
            <table>
                <thead>
                    <tr>
                        <th>Layout name</th>
                        <th>Zone(s) containing shared layout</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ related_layout.name }}</td>
                        <td>
                            {% for zone in related_layout.zones %}
                                {% if zone.hasLinkedZone and zone.linkedZone.layoutId == layout.id %}
                                    <p>{{ related_layout.layoutType.zone(zone.identifier).name }}</p>
                                {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table>
        {% endfor %}

        <div class="form-actions">
            CLEAR SELECTED
        </div>
    </div>
</div>
