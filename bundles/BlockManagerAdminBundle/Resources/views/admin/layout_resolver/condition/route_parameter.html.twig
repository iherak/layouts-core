{% trans_default_domain 'ngbm_admin' %}

<span class="settings-value editable-value js-condition-edit" data-condition-id="{{ condition.id }}">
    {{ ('layout_resolver.condition.' ~ condition.type)|trans }}:

    {% if condition.value is iterable %}
        {% for key, value in condition.value %}
            {{ key }}: {{ value|join(', ') }}
        {% endfor %}
    {% endif %}
</span>

<a href="#" class="remove-setting js-condition-delete" data-condition-id="{{ condition.id }}"><i class="material-icons">clear</i></a>
