{% extends '@NetgenBlockManagerAdmin/form/form.html.twig' %}

{% trans_default_domain 'ngbm_forms' %}

{% block children %}
    <a class="toggle-link sub-toggle" role="button" data-toggle="collapse" href="#collapseOffsetLimit" aria-expanded="true" aria-controls="collapseOffsetLimit">
        {{ 'collection.offset_limit'|trans }}
    </a>

    {% set is_manual = not form.vars.collection.hasQuery %}

    <div class="collapse in" id="collapseOffsetLimit">
        <div class="row">
            {# Manual collections do not use offset #}
            <div class="col-xs-6">{{ form_row(form.offset, {attr: {disabled: is_manual}}) }}</div>
            <div class="col-xs-6">{{ form_row(form.limit) }}</div>
        </div>
    </div>
{% endblock %}
