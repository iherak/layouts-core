{% extends 'NetgenBlockManagerAdminBundle:form:form.html.twig' %}

{% form_theme form.type _self %}

{% trans_default_domain 'ngbm_forms' %}

{% block _create_type_widget %}
    <div {{ block('widget_container_attributes') }}>
    {%- for child in form %}
        {{- form_widget(child) -}}
        {{- form_label(child, null, {label: ' ', translation_domain: choice_translation_domain}) -}}
    {% endfor -%}
    </div>
{% endblock %}

{% block children %}
    {{ form_row(form.type, {attr: {class: 'layout-type'}}) }}
    {{ form_row(form.name) }}
{% endblock %}
