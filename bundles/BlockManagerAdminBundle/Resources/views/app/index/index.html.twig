{% trans_default_domain 'ngbm_app' %}

<!DOCTYPE html>
<html lang="{{ app.request.locale|replace({'_': '-'}) }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

    <title>{{ 'pagelayout.title'|trans }}</title>

    <link rel="stylesheet" href="{{ asset('bundles/netgenblockmanagerui/vendor/alloy-editor/assets/alloy-editor-ocean-min.css') }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('main.css', 'ngbm_app_css') }}">
    {% endblock %}
</head>

<body>
    <div id="app"></div>

    <script src="{{ asset('alloy-editor/alloy-editor-all.js', 'ngbm_app_vendor') }}"></script>
    <script src="{{ asset('ace-editor/ace.js', 'ngbm_app_vendor') }}"></script>

    {% block javascripts %}
        <script src="{{ asset('main.js', 'ngbm_app_js') }}"></script>
    {% endblock %}
</body>
</html>
