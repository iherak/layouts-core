{% trans_default_domain 'ngbm_app' %}

<!DOCTYPE html>
<html lang="{{ app.request.locale|replace({'_': '-'}) }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

    <meta name="ngbm-base-path" content="{{ path('ngbm_root') }}">
    <meta name="ngcb-base-path" content="{{ path('ngcb_root') }}">

    <title>{{ 'pagelayout.title'|trans }}</title>

    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('bundles/netgenblockmanageradmin/images/favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" href="{{ asset('bundles/netgenblockmanageradmin/images/favicon/favicon-32x32.png') }}" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ asset('bundles/netgenblockmanageradmin/images/favicon/favicon-16x16.png') }}" sizes="16x16">
    <link rel="manifest" href="{{ asset('bundles/netgenblockmanageradmin/images/favicon/manifest.json') }}">
    <link rel="mask-icon" href="{{ asset('bundles/netgenblockmanageradmin/images/favicon/safari-pinned-tab.svg') }}" color="#5bbad5">
    <meta name="theme-color" content="#383838">

    <link rel="stylesheet" href="{{ asset('alloy-editor/assets/alloy-editor-ocean-min.css', 'ngbm_app_vendor') }}">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('main.css', 'ngbm_app_css') }}">
    {% endblock %}
</head>

<body>
    <div id="app"></div>

    <script src="{{ asset('alloy-editor/alloy-editor-all.js', 'ngbm_app_vendor') }}"></script>
    <script src="{{ asset('ace-editor/ace.js', 'ngbm_app_vendor') }}"></script>

    {% set google_maps_api_key = ngbm.config.parameter('google_maps_api_key') %}

    {% if google_maps_api_key is not empty %}
        <script src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_api_key }}" async defer></script>
    {% endif %}

    {% block javascripts %}
        <script src="{{ asset('main.js', 'ngbm_app_js') }}"></script>
    {% endblock %}
</body>
</html>
