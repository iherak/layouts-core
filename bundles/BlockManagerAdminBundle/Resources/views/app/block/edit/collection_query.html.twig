{% set collection_identifier = collection_identifier|default('default') %}

{% if block.hasCollectionReference(collection_identifier) %}
    {% set collection = block.collectionReference(collection_identifier).collection %}

    {% if collection.type is constant('TYPE_DYNAMIC', collection) %}
        <div data-query-form="true" data-form="{{ path('ngbm_app_collection_query_form_edit', {'queryId': collection.query.id, 'locale': collection.query.translation.locale, 'formName': 'full'}) }}"></div>
    {% endif %}
{% endif %}
