<?xml version="1.0" encoding="UTF-8"?>

<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
    backupGlobals="false"
    bootstrap="../vendor/autoload.php"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
>
    <testsuites>
        <testsuite name="Netgen\BlockManager\API">
            <directory>lib/API/Tests</directory>
        </testsuite>
        <testsuite name="Netgen\BlockManager\Core">
            <directory>lib/Core/Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">.</directory>
            <exclude>
                <directory>lib/Tests</directory>
                <directory>lib/*/Tests</directory>
                <directory>bundles/*/*Bundle/Tests</directory>
                <directory>bundles/*/*Bundle/*/Tests</directory>
                <directory>bundles/*/*Bundle/Resources</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
